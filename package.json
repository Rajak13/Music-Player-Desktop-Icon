{
  "name": "melodies-music-player",
  "productName": "Melodies",
  "version": "1.0.0",
  "description": "A beautiful, modern music player with playlist management and local file support",
  "main": "main.js",
  "homepage": "https://github.com/Rajak13/Music-Player-Desktop-Icon",
  "author": {
    "name": "Rajak12",
    "email": "queresma05@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder --publish=always",
    "release": "npm run build && npm run publish"
  },
  "keywords": [
    "music",
    "player",
    "audio",
    "playlist",
    "electron",
    "desktop",
    "mp3",
    "music-player"
  ],
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "com.rajak13.melodies",
    "productName": "Melodies",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Rajak13",
      "repo": "Music-Player-Desktop-Icon"
    },
    "files": [
      "**/*",
      "!assets/songs/*.mp3",
      "!assets/songs/*.wav",
      "!assets/songs/*.m4a",
      "!assets/songs/*.flac",
      "!assets/songs/*.ogg",
      "!assets/songs/*.aac",
      "!assets/songs/*.json",
      "!data/playlists.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}